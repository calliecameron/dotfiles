#!/bin/bash

function usage() {
    echo "Usage: $(basename "${0}") infile [outfile]"
    exit 1
}

test -z "${1}" && usage
INFILE="$(readlink -f "${1}")"

if [ ! -z "${2}" ]; then
    OUTFILE="${2}"
else
    BASE="$(basename "${INFILE}" '.dia')"
    DIRNAME="$(dirname "${INFILE}")"
    OUTFILE="${DIRNAME}/${BASE}.pdf"
fi

TMPFILE="$(mktemp)"
dia -e "${TMPFILE}" -t eps "${INFILE}"

ps2pdf -dEPSCrop "${TMPFILE}" "${OUTFILE}"

rm "${TMPFILE}"
