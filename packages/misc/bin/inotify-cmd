#!/bin/bash
# Run a command every time a file is modified

function usage() {
    echo "Usage: $(basename "${0}") file cmd [args...]"
    exit 1
}

test -z "${1}" && usage
test ! -f "${1}" && usage
test -z "${2}" && usage

FILE="${1}"
CMD="${2}"

while inotifywait -e modify "${FILE}" &>/dev/null; do
    "${CMD}" "${@:3}"
done
