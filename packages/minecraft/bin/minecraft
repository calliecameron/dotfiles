#!/bin/bash

set -eu

x11docker \
    --rootless \
    --xc \
    --gpu \
    --lang \
    --network \
    --pulseaudio \
    --hostdisplay \
    --name=minecraft-atlauncher \
    --env HOME=/minecraft \
    --share minecraft \
    -- \
    --tmpfs /tmp:exec \
    --hostname minecraft-atlauncher \
    -- \
    minecraft-atlauncher &

PID="${!}"

sleep 5
docker cp "${HOME}/.config/pulse/cookie" "minecraft-atlauncher:/x11docker/pulseaudio.cookie"

wait "${PID}"
