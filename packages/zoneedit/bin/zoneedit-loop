#!/bin/bash
# Update the IP address pointed to by a ZoneEdit account to this machine's external IP, repeatedly

function usage() {
    echo "Usage: $(basename "${0}") host username password [delay=30m]"
    exit 1
}

test -z "${1}" && usage
test -z "${2}" && usage
test -z "${3}" && usage

HOST="${1}"
USERNAME="${2}"
PASSWORD="${3}"

if [ -n "${4}" ]; then
    DELAY="${4}"
else
    DELAY='30m'
fi

while true; do
    zoneedit "${HOST}" "${USERNAME}" "${PASSWORD}"
    sleep "${DELAY}"
done
