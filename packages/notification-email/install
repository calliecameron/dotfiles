#!/bin/bash

set -eu

sudo apt-get -y install ssmtp

if ! sudo grep dotfiles /etc/ssmtp/ssmtp.conf &>/dev/null; then
    sudo cp "${PACKAGE_INSTALL_DIR}/ssmtp-conf-template" /etc/ssmtp/ssmtp.conf
fi

sudo chown root:mail /etc/ssmtp/ssmtp.conf
sudo chmod ug=r,o= /etc/ssmtp/ssmtp.conf

dotfiles-log-package-message 'Configure email settings in /etc/ssmtp/ssmtp.conf'
