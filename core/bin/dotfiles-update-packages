#!/bin/bash
# Update all installed packages

source "${DOTFILES_PACKAGE_SCRIPTS}/update-package.bash" || exit 1

function cleanup() {
    rmdir "${DOTFILES_PACKAGE_MUTEX}"
}

function fail() {
    dotfiles-echo-red 'Updating packages failed.'
    cleanup
    exit 1
}

if mkdir "${DOTFILES_PACKAGE_MUTEX}" &>/dev/null; then
    trap fail SIGINT SIGTERM

    if [ -e "${DOTFILES_PACKAGE_INSTALL_DIR}" ]; then
        update-all-packages || fail

        if [ -e "${DOTFILES_NEEDS_LOGOUT}" ]; then
            dotfiles-echo-yellow 'Log out and log in again to set everything up correctly.'
        fi
    fi
    cleanup
else
    dotfiles-echo-yellow 'Another shell is installing or updating packages; cannot update here.'
fi
