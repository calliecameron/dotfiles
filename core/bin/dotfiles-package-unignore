#!/bin/bash

set -eu

function usage() {
    echo "Usage: $(basename "${0}") package_name..."
    exit 1
}

test -z "${1:-}" && usage

while [ -n "${1:-}" ]; do
    PACKAGE="${1}"
    if [[ "${PACKAGE}" == *'/'* ]]; then
        usage
    fi
    if dotfiles-package-ignored "${PACKAGE}"; then
        sed -i "/^${PACKAGE}\$/d" "${DOTFILES_PACKAGE_IGNORE_FILE}"
    fi
    shift
done

exit 0
