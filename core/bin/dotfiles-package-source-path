#!/bin/bash

set -eu

function usage() {
    echo "Usage: $(basename "${0}") package_name_or_source_path"
    exit 1
}

test -z "${1:-}" && usage
PACKAGE="${1}"

if [[ "${PACKAGE}" == *'/'* ]]; then
    echo "${PACKAGE}"
    exit 0
fi

IFS=':'
for package_root in ${DOTFILES_PACKAGE_ROOTS}; do
    if [ -n "${package_root}" ]; then
        PACKAGE_PATH="${package_root}/${PACKAGE}"
        if [ -d "${PACKAGE_PATH}" ]; then
            echo "${PACKAGE_PATH}"
            exit 0
        fi
    fi
done
exit 1
