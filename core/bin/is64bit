#!/bin/bash

VERBOSE="${1}"

function say-yes() {
    if [ "${VERBOSE}" = '-v' ]; then
        echo 'Yes'
    fi
    exit 0
}

function say-no() {
    if [ "${VERBOSE}" = '-v' ]; then
        echo 'No'
    fi
    exit 1
}

if [ "${DOTFILES_OS}" = 'linux' ]; then
    if [ "$(uname -m)" = 'x86_64' ]; then
        say-yes
    else
        say-no
    fi
else
    say-no
fi
